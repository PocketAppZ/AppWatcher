<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.anod.appwatcher">

    <uses-sdk/>
    <!-- for google account token -->
    <uses-permission android:name="android.permission.MANAGE_ACCOUNTS"/>
    <uses-permission android:name="android.permission.GET_ACCOUNTS"/>
    <uses-permission android:name="android.permission.USE_CREDENTIALS"/>
    <!-- for device id -->
    <uses-permission android:name="android.permission.WAKE_LOCK"/>
    <uses-permission android:name="com.google.android.providers.gsf.permission.READ_GSERVICES"/>
    <uses-permission android:name="android.permission.INTERNET"/>
    <!-- for checkin Wi-Fi -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <!-- for Export -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <!-- For GSM network manager -->
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED"/>
    <!-- to uninstall an app -->
    <uses-permission android:name="android.permission.REQUEST_DELETE_PACKAGES" />

    <application
        android:name=".AppWatcherApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="false"
        android:theme="@style/AppTheme.Black"
        tools:ignore="GoogleAppIndexingWarning">
        <activity
            android:name=".ShareRecieverActivity"
            android:label="@string/add_to_appwatcher">
            <intent-filter>
                <action android:name="android.intent.action.SEND"/>

                <category android:name="android.intent.category.DEFAULT"/>

                <data android:mimeType="text/plain"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".ChangelogActivity"
            android:label=""
            android:theme="@style/AppTheme.Dialog.NoActionBar"/>
        <activity
            android:name=".MarketSearchActivity"
            android:label="@string/activity_market"/>
        <activity android:name=".userLog.UserLogActivity"
            android:label="@string/log"/>
        <activity
            android:name=".AppWatcherActivity"
            android:clearTaskOnLaunch="true"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.Splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
            <meta-data android:name="android.app.shortcuts"
                android:resource="@xml/shortcuts" />
        </activity>
        <activity
            android:name=".tags.AppsTagActivity"/>
        <activity
            android:name=".tags.AppsTagSelectActivity"
            android:theme="@style/AppTheme.Dialog"/>
        <activity
            android:name=".accounts.AccountSelectionDialogActivity"
            android:theme="@style/AlertDialog"/>
        <activity
            android:name=".NotificationActivity"
            android:exported="true"
            android:noHistory="true"
            android:taskAffinity="com.anod.appwatcher.notification"
            android:theme="@style/InvisibleTheme"/>
        <activity
            android:name=".SettingsActivity"
            android:label="@string/preferences"/>
        <activity android:name="info.anodsplace.framework.app.FragmentToolbarActivity"/>

        <activity
            android:name="com.google.android.gms.oss.licenses.OssLicensesActivity"
            android:theme="@style/Theme.AppCompat.DayNight"/>

        <activity
            android:name="com.google.android.gms.oss.licenses.OssLicensesMenuActivity"
            android:theme="@style/Theme.AppCompat.DayNight"/>

        <provider
            android:name=".AppListContentProvider"
            android:authorities="${applicationId}"
            android:label="@string/app_name"
            android:syncable="true"/>

        <service
            android:name=".sync.SyncTaskService"
            android:exported="false">
            <intent-filter>
                <action android:name="com.firebase.jobdispatcher.ACTION_EXECUTE"/>
            </intent-filter>
        </service>

        <service
            android:name=".backup.gdrive.UploadService"
            android:exported="false">
            <intent-filter>
                <action android:name="com.firebase.jobdispatcher.ACTION_EXECUTE"/>
            </intent-filter>
        </service>

        <service
            android:name=".sync.ManualSyncService"
            android:exported="false"/>

        <meta-data
            android:name="com.google.android.backup.api_key"
            android:value="AEdPqrEAAAAIWapJJclZH281aXWN3VunYCHInRkwJag2VkVSIw"/>
        <meta-data android:name="firebase_crashlytics_collection_enabled"
            android:value="false" />
        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />

    </application>
</manifest>