<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="InvisibleTheme" parent="android:Theme.Translucent">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="AppTheme.Dialog" parent="@style/Theme.AppCompat.DayNight.Dialog">
        <!-- Set AppCompat’s color theming attrs -->
        <item name="colorPrimary">@color/theme_primary</item>
        <item name="colorPrimaryDark">@color/theme_primary_dark</item>
        <item name="colorAccent">@color/theme_accent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.Base" parent="@style/Theme.AppCompat.DayNight.NoActionBar">
        <!-- Set AppCompat’s color theming attrs -->
        <item name="colorPrimary">@color/theme_primary</item>
        <item name="colorPrimaryDark">@color/theme_primary_dark</item>
        <item name="colorAccent">@color/theme_accent</item>
        <!-- Override color for Material.Small -->
        <item name="android:textColorTertiary">@color/primary_text</item>
        <item name="android:buttonStyle">@style/BrandButtonStyle</item>
    </style>

    <style name="BrandButtonStyle" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">@color/theme_primary</item>
        <item name="android:textColor">@color/primary_text_dark</item>
    </style>

    <style name="AppTheme.Main" parent="AppTheme.Base" />

    <style name="ActionButton" parent="Widget.AppCompat.ActionButton" />

    <style name="ListHeader">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:typeface">normal</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="AlertDialog" parent="@style/Theme.AppCompat.DayNight.Dialog.Alert">
        <item name="colorPrimaryDark">@color/theme_primary_dark</item>
        <item name="colorAccent">@color/theme_accent</item>
        <item name="android:textColor">@color/theme_accent</item>
    </style>

</resources>