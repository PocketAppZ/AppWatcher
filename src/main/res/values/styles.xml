<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="InvisibleTheme" parent="android:Theme.Translucent">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="AppTheme.Dialog" parent="@style/Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Set AppCompat’s color theming attrs -->
        <item name="colorPrimary">@color/material_blue_800</item>
        <item name="colorPrimaryDark">@color/material_blue_900</item>
        <item name="colorAccent">@color/theme_accent</item>

        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
        <item name="android:fontFamily">@font/rubik</item>
        <item name="fontFamily">@font/rubik</item>
    </style>

    <style name="AppTheme.Dialog.Changelog" parent="AppTheme.Dialog">
        <item name="android:windowMinWidthMajor">@dimen/dialog_min_width_major</item>
        <item name="android:windowMinWidthMinor">@dimen/dialog_min_width_major</item>
    </style>

    <style name="AppTheme.Base" parent="@style/Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Set AppCompat’s color theming attrs -->
        <item name="colorPrimary">@color/theme_primary</item>
        <item name="colorSecondary">@color/material_blue_800</item>
        <item name="colorOnPrimary">@color/theme_on_primary</item>
        <item name="colorPrimaryDark">@color/theme_primary_dark</item>
        <item name="colorAccent">@color/theme_accent</item>
        <!-- Override color for Material.Small -->
        <item name="android:textColorTertiary">@color/primary_text</item>
        <item name="android:buttonStyle">@style/BrandButtonStyle</item>

        <item name="inactiveRow">@color/row_inactive</item>
        <item name="colorItemBackground">@color/item_background</item>
        <item name="colorPreferenceBackground">@color/preference_background</item>
        <item name="colorItemLine">@android:color/transparent</item>

        <item name="android:fontFamily">@font/rubik</item>
        <item name="fontFamily">@font/rubik</item>
        <item name="android:navigationBarColor">@color/theme_primary_dark</item>
    </style>

    <style name="BrandButtonStyle" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">@color/theme_primary</item>
        <item name="android:textColor">@color/primary_text_dark</item>
    </style>

    <style name="AppTheme.Main" parent="AppTheme.Base">
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@color/theme_primary_dark</item>
    </style>

    <style name="AppTheme.Neutral" parent="AppTheme.Base">
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@color/neutral_theme_primary_dark</item>

        <item name="colorPrimary">@color/neutral_theme_primary</item>
        <item name="colorOnPrimary">@color/material_grey_50_</item>
        <item name="colorPrimaryDark">@color/neutral_theme_primary_dark</item>
        <item name="colorSecondary">@color/neutral_theme_primary</item>
        <item name="colorAccent">@color/neutral_theme_accent</item>
    </style>

    <style name="AppTheme.Black" parent="AppTheme.Base">
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@color/black_theme_primary</item>

        <item name="colorPrimary">@color/black_theme_primary</item>
        <item name="colorOnPrimary">@color/material_grey_50_</item>
        <item name="colorPrimaryDark">@color/black_theme_primary_dark</item>
        <item name="colorSecondary">@color/black_theme_primary</item>
        <item name="android:colorBackground">@android:color/black</item>
        <item name="android:colorBackgroundCacheHint">@android:color/black</item>
        <item name="android:windowBackground">@android:color/black</item>
        <item name="colorItemBackground">@android:color/black</item>
        <item name="colorPreferenceBackground">@android:color/black</item>
        <item name="colorItemLine">@color/material_grey_800_</item>
    </style>

    <style name="AppTheme.Dialog.Black" parent="AppTheme.Dialog">
        <item name="colorPrimary">@color/black_theme_primary</item>
        <item name="colorPrimaryDark">@color/black_theme_primary_dark</item>
        <item name="android:colorBackground">@android:color/black</item>
        <item name="android:colorBackgroundCacheHint">@android:color/black</item>
        <item name="android:windowBackground">@android:color/black</item>
        <item name="colorItemBackground">@android:color/black</item>
        <item name="colorItemLine">@android:color/transparent</item>
    </style>

    <style name="AppTheme.Dialog.Black.Changelog" parent="AppTheme.Dialog.Black">
        <item name="android:windowMinWidthMajor">@dimen/dialog_min_width_major</item>
        <item name="android:windowMinWidthMinor">@dimen/dialog_min_width_major</item>
    </style>

    <style name="AppTheme.Splash" parent="AppTheme.Base">
        <item name="android:windowBackground">@drawable/splash_screen</item>
    </style>

    <style name="ListHeader">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:typeface">normal</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="AlertDialog" parent="@style/Theme.MaterialComponents.Dialog.Alert">
        <item name="colorPrimaryDark">@color/theme_primary_dark</item>
        <item name="colorAccent">@color/theme_accent</item>
        <item name="android:textColor">@color/theme_accent</item>
    </style>

    <style name="ChangelogTitle" parent="@style/TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">14sp</item>
        <!-- include other attributes you want to change: textColor, textStyle, etc -->
    </style>

    <style name="ChangelogSubtitle" parent="@style/TextAppearance.Widget.AppCompat.Toolbar.Subtitle">
        <item name="android:textSize">10sp</item>
    </style>
</resources>