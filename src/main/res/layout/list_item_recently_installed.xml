<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <include layout="@layout/list_apps_header" />

    <ScrollView
        android:layout_width="match_parent"
        android:minHeight="72dp"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@android:id/list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="72dp"
            android:orientation="horizontal">

            <include android:id="@+id/app1" layout="@layout/list_item_recently_installed_app" />
            <include android:id="@+id/app2" layout="@layout/list_item_recently_installed_app" />
            <include android:id="@+id/app3" layout="@layout/list_item_recently_installed_app" />
            <include android:id="@+id/app4" layout="@layout/list_item_recently_installed_app" />
            <include android:id="@+id/app5" layout="@layout/list_item_recently_installed_app" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>
