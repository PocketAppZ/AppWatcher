<?xml version="1.0" encoding="utf-8"?>
<shortcuts xmlns:android="http://schemas.android.com/apk/res/android">
    <shortcut
        android:shortcutId="recent"
        android:enabled="true"
        android:icon="@drawable/ic_shortcut_recent_48dp"
        android:shortcutShortLabel="@string/shortcut_recent"
        android:shortcutLongLabel="@string/shortcut_recent">
        <intent
            android:action="android.intent.action.VIEW"
            android:targetPackage="com.anod.appwatcher"
            android:targetClass="com.anod.appwatcher.AppWatcherActivity">
            <extra android:name="tab_id" android:value="1" />
        </intent>
    </shortcut>
    <shortcut
        android:shortcutId="search"
        android:enabled="true"
        android:icon="@drawable/ic_shortcut_search_48dp"
        android:shortcutShortLabel="@string/shortcut_search"
        android:shortcutLongLabel="@string/shortcut_search">
        <intent
            android:action="android.intent.action.VIEW"
            android:targetPackage="com.anod.appwatcher"
            android:targetClass="com.anod.appwatcher.AppWatcherActivity">
            <extra android:name="expand_search" android:value="true" />
        </intent>
    </shortcut>
</shortcuts>

