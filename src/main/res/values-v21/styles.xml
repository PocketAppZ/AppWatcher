<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AppTheme.Main" parent="AppTheme.Base">
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@color/theme_primary_dark</item>
    </style>

    <style name="AppTheme.Neutral" parent="AppTheme.Base">
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@color/neutral_theme_primary_dark</item>

        <item name="colorPrimary">@color/neutral_theme_primary</item>
        <item name="colorPrimaryDark">@color/neutral_theme_primary_dark</item>
        <item name="colorAccent">@color/neutral_theme_accent</item>
    </style>

    <style name="AppTheme.Black" parent="AppTheme.Base">
        <item name="android:windowDisablePreview">true</item>

        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@color/black_theme_primary</item>

        <item name="colorPrimary">@color/black_theme_primary</item>
        <item name="colorPrimaryDark">@color/black_theme_primary_dark</item>

        <item name="android:colorBackground">@android:color/black</item>
        <item name="android:colorBackgroundCacheHint">@android:color/black</item>

        <item name="android:windowBackground">@android:color/black</item>
        <item name="controlBackground">@android:color/black</item>

        <item name="colorItemBackground">@android:color/black</item>
    </style>

</resources>
